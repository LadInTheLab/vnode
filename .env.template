# ============================================================================
# TAILSCALE VIRTUAL EXIT NODE CONFIGURATION
# ============================================================================
# Copy this file to .env and fill in your values
# Never commit .env to version control!

# ----------------------------------------------------------------------------
# Tailscale Configuration
# ----------------------------------------------------------------------------
# Get your auth key from: https://login.tailscale.com/admin/settings/keys
# Recommend using a reusable key with tags for automation
TS_AUTHKEY=tskey-auth-XXXXXXXXXXXXXXXXXXXXX

# Hostname for this exit node in your tailnet
TS_HOSTNAME=vnode-location-name

# ----------------------------------------------------------------------------
# Network Configuration
# ----------------------------------------------------------------------------
# The static IP address for the Gluetun container on your MACVLAN network
# This should be outside your DHCP range but on the same subnet
MACVLAN_IP=192.168.1.50

# Static MAC address to prevent ARP confusion on UniFi/UDM devices
# Generate a unique one: printf 'DE:AD:BE:EF:%02X:%02X\n' $((RANDOM%256)) $((RANDOM%256))
MACVLAN_MAC=DE:AD:BE:EF:12:34

# Your LAN gateway IP (usually your router)
GATEWAY_IP=192.168.1.1

# MACVLAN network name (must be created before deployment)
MACVLAN_NETWORK=pub_net

# Tailscale tunnel port (default: 41641)
TUNNEL_PORT=41641

# ----------------------------------------------------------------------------
# VPN Configuration (WireGuard)
# ----------------------------------------------------------------------------
# Obtain these from your VPN provider (Mullvad, ProtonVPN, IVPN, etc.)
# For Mullvad: https://mullvad.net/en/account/#/wireguard-config

VPN_PRIVATE_KEY=your_wireguard_private_key_here
VPN_PUBLIC_KEY=server_public_key_here
VPN_ENDPOINT_IP=vpn.server.ip.here
VPN_PORT=51820
VPN_IP=10.x.x.x/32

# ----------------------------------------------------------------------------
# Optional: Advanced Settings
# ----------------------------------------------------------------------------
# DNS server for VPN tunnel (default: Quad9)
DNS_SERVER=9.9.9.9

# WireGuard MTU (conservative default for compatibility)
WIREGUARD_MTU=1280

# WireGuard keepalive interval in seconds
WIREGUARD_KEEPALIVE=25

# TCP MSS clamping value (prevents fragmentation issues)
TCP_MSS_CLAMP=1120

# ----------------------------------------------------------------------------
# Optional: Monitoring
# ----------------------------------------------------------------------------
# How often to check container health (seconds)
HEALTHCHECK_INTERVAL=300

# Enable/disable update checking
CHECK_UPDATES=true
